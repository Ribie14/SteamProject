{% extends 'base.html.twig' %}

{% block title %}Hello SteamController!{% endblock %}

{% block body %}
<section class="jeux">

    {% for jeu in jeux %}
    <article>
         <h2>{{ jeu.Titre }}</h2>
            <div class="metadata">Sortie le {{jeu.Date | date('d/m/Y') }}</div>
                <div class ="content">
                    <img src="{{ jeu.image }}" alt"">
                    <p>{{ jeu.Prix }}</p>
                    <p>{{ jeu.Description }}</p>
                    <a href="{{ path('jeux_show', {'id' : jeu.id}) }}" class="btn btn-primary">En savoir plus</a>
                </div>
    </article>
    {% endfor %}

</section>
{% endblock %}
