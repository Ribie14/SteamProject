{% extends 'base.html.twig' %}


{% block body %}

<p>Modification du mot de passe de {{app.user.username }}, voici toutes vos informations</p>

      {% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error">{{message}}</div>
			</div>
		{% endfor %}
<div class="grix xs2">
    <form method="post">
                <div class="form-field">
                    <label for="pass">Mot de passe</label>
                    <input type="password" id="pass" name="pass" class="form-control">
                </div>
                <div class="form-field">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" id="pass2" name="pass2" class="form-control">
                </div>
                 <a  class="btn btn-primary">Valider</a>
            
            </form>

</div>

{% endblock %}